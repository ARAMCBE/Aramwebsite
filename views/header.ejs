<header class='nav navbar-inverse' role="banner">
<span class="btn social facebook" style="padding:14px; margin-left:5px;"></span>
<span class="btn social twitter" style="padding:14px;"></span>
    <%if (!isValidUser) {%>
        <form class='form-inline  navbar-right' role="form">
            <div id="login-error" class="alert alert-danger" style="visibility:hidden; float:left">
              Invalid Username / Password
            </div>
            <div class="form-group">
              <input id='email' type="email" class="form-control" placeholder="Enter email">
            </div>
            <div class="form-group">
              <input id='password' type="password" class="form-control" placeholder="Password">
            </div>
            <input type="button" value="Login" class="btn" onClick="login()"/>
            <a href='/registration'><span>Sign Up<span></a>
        </form>
   <% } %>
   <%if (isValidUser) {%>
        <div class='navbar-right' style="padding:5px;">
            <span id='display_name' style="padding:5px; color:grey;"><%= username %></span>
            <a type="button" value="Logout" onClick="logout()"  id="logout_btn">Logout</a>
        </div>
   <% } %>
</header>
